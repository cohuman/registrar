<!DOCTYPE html>
<html>
<head>
  <title>Registrar</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<% if flash[:error] -%>
		<p id='error' class="flash"><%= flash[:error] %></p>
	<% end -%>
	
	<% if flash[:notice] -%>
		<p id='notice' class="flash"><%= flash[:notice] %></p>
	<% end -%>
	<div id='wrapper' class='<%= controller.controller_name %> <%= controller.action_name %>'>
		<div class='inner'>
			<%= image_tag 'cohuman_logo.png' %>
			<%= yield %>
		</div>
	</div>
</body>
</html>
