<h1>Listing invitations</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Inviter Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invitations.each do |invitation| %>
  <tr>
    <td><%= invitation.email %></td>
    <td><%= invitation.inviter.email %></td>
    <td class='button show'><%= link_to 'Show', invitation, :class => 'button_link' %></td>
  </tr>
<% end %>
</table>

<br />

<div class='button'>
	<%= link_to 'New Invitation', new_invitation_path, :class => 'button_link' %>
</div>